<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/dialogImage"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:background="@drawable/row_send"
        android:layout_width="50dp"
        android:layout_height="50dp"/>




    <TextView
        android:id="@+id/textviewDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogImage"
        android:text="@string/NewMessage"/>


    <EditText android:id="@+id/view_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewDialog"
        android:hint="@string/TypeHere"
        />

</RelativeLayout>